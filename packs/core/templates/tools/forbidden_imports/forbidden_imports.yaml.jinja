languages:
  python:
    extensions: [".py"]
    layers:
      domain:
        include:
          - "services/**/src/**/domain/**/*.py"
        deny: ["requests", "fastapi", "boto3"]
      application:
        include:
          - "services/**/src/**/application/**/*.py"
        deny: ["requests", "fastapi", "boto3"]
      ports:
        include:
          - "services/**/src/**/ports/**/*.py"
        deny: ["requests", "fastapi", "boto3"]
  typescript:
    extensions: [".ts", ".tsx"]
    layers:
      domain:
        include:
          - "services/**/src/**/domain/**/*.ts"
          - "services/**/src/**/domain/**/*.tsx"
        deny: ["axios", "express", "node-fetch"]
      application:
        include:
          - "services/**/src/**/application/**/*.ts"
          - "services/**/src/**/application/**/*.tsx"
        deny: ["axios", "express", "node-fetch"]
      ports:
        include:
          - "services/**/src/**/ports/**/*.ts"
          - "services/**/src/**/ports/**/*.tsx"
        deny: ["axios", "express", "node-fetch"]
  rust:
    extensions: [".rs"]
    layers:
      domain:
        include:
          - "services/**/src/**/domain/**/*.rs"
        deny: ["reqwest", "tokio", "sqlx"]
      application:
        include:
          - "services/**/src/**/application/**/*.rs"
        deny: ["reqwest", "tokio", "sqlx"]
      ports:
        include:
          - "services/**/src/**/ports/**/*.rs"
        deny: ["reqwest", "tokio", "sqlx"]
  go:
    extensions: [".go"]
    layers:
      domain:
        include:
          - "services/**/internal/domain/**/*.go"
        deny: ["net/http", "database/sql"]
      application:
        include:
          - "services/**/internal/application/**/*.go"
        deny: ["net/http", "database/sql"]
      ports:
        include:
          - "services/**/internal/ports/**/*.go"
        deny: ["net/http", "database/sql"]
